#sinatra_authentication
  - if Rack.const_defined?('Flash')
    #sinatra_authentication_flash= flash[:notice]
  %h1.page_title Add user
  %form{:action => "/auth/adduser", :method => "post"}
    .field
      .label
        %label{:for => "user_login_name"} Login
      %input{ :id => "user_login_name", :name => "user[login_name]", :size => 30, :type => "text" , :value => params[:login_name]}
    .field
      .label
        %label{:for => "user_email"} Email
      %input{ :id => "user_email", :name => "user[email]", :size => 30, :type => "text" , :value => params[:email]}
    .field
      .label
        %label{:for => "user_password"} Password
      %input{ :id => "user_password", :name => "user[password]", :size => 30, :type => "password" }
    .field
      .label
        %label{:for => "user_password_confirmation"} Confirm Password
      %input{ :id => "user_password_confirmation", :name => "user[password_confirmation]", :size => 30, :type => "password" }
    .buttons
      %input{ :value => "Create account", :type => "submit" }

