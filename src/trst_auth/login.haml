-unless request.xhr?
  :javascript
    trst.auth.init()
-else
  %p.close{:onclick => "trst.auth.destroy()"}
  %p.title= t('trst_auth.login_title')
  %form#form_auth{:action => "/auth/login", :method => "post"}
    %span
      = t('trst_auth.login_name')
      %input{:name => "[login_name]"}
    %span
      = t('trst_auth.login_pass')
      %input{:type => "password", :name => "[password]"}
    %span.ce.login
      %input{:type => "submit", :value => " Login ", :onclick => "trst.auth.destroy()"}
