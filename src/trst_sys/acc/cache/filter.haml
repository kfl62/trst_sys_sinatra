%p.close{:onclick => "trst.task.destroy()"}
%p.task_title= current_title(@task,action)
%form{:id  => "xhr_#{action}"}
  %table{:cellspacing => "0"}
    %thead
      %tr
        %td
    %tbody
      %tr
        %td
          - if current_user.unit_id
            %select{:onchange => "if (this.options[this.selectedIndex].value != 'null'){trst.task.init('#{@task.id}',
                                  'get',
                                  (this.options[this.selectedIndex].value))}"}
              %option{:value => 'null'}= TrstAccCache.by_unit_id(current_user.unit_id).empty? ? t('select.no_data') : t('select.select')
              - unless TrstAccCache.by_unit_id(current_user.unit_id).empty?
                - TrstAccCache.by_unit_id(current_user.unit_id).each do |o|
                  %option{:value => o.id}
                    = option_name(o)
          - else
            %select{:onchange => "if (this.options[this.selectedIndex].value != 'null'){alert('În curând...')}"}
              %option{:value => "null"}= "Selectaţi unitatea"
              - TrstFirm.first.units.asc(:slug).each do |u|
                %option{:value => u.id}= u.name[0]
    %tfoot
      %tr
        %td{:class => "buttons_bottom"}
          - current_buttons(action).each do |verb|
            %span{:class => "button #{verb}", :onclick => current_xhr(verb,@task.id,action,"new")}<
              =t("button.#{verb}")
