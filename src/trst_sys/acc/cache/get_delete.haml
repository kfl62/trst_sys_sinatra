%p.close{:onclick => "trst.task.destroy()"}
%p.task_title= current_title(@task,action)
- if action == 'get'
  %span#hidden_data.hidden{:data => {:task_id => "#{@task.id}", :js => "acc.cache", :action => "get", :object_id => "#{@object.id rescue nil}"}}
  %table{:cellspacing => "0"}
    %thead
      %tr
        %th= t('gen_head.field')
        %th= t('gen_head.value')
    %tbody
      - @object.table_data.each do |data|
        - tr_body('get',data)
    %tfoot
      %tr
        %td{:class => "buttons_bottom", :colspan => "2"}
          %span{:class => "button put mc-evt"}= t("button.put")
          %span{:class => "button delete mc-evt"}= t("button.delete")
          %span{:class => "button cancel mc-evt"}= t("button.cancel")
      %tr
        - if current_user.unit_id
          %td.footer_note{:colspan => "2"}= t('trst_acc_cache.footer_note_get.unit')
        - else
          %td.footer_note{:colspan => "2"}= "&nbsp;" #t('gen_footer.note')
- else
  %span#hidden_data.hidden{:data => {:task_id => "#{@task.id}", :js => "acc.cache", :action => "delete", :object_id => "#{@object.id}"}}
  %table
    %thead
      %tr
        %th= t("gen_warning.#{action}")
    %tbody
      %tr
        %td
          %p= t("gen_msg.#{action}", :data => "#{@object.class.to_s} -> #{@object.name}")
    %tfoot
      %tr
        %td{:class => "buttons_bottom"}
          %span{:class => "button cancel mc-evt"}= t("button.cancel")
          %span{:class => "button delete mc-evt"}= t("button.delete")
