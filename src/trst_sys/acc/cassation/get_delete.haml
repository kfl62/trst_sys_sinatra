%p.close{:onclick => "trst.task.destroy()"}
%p.task_title= current_title(@task,action)
- if action == 'get'
  %span#hidden_data.hidden{:data => {:task_id => "#{@task.id}", :js => "acc.cassation", :action => "get", :object_id => "#{@object.id rescue nil}"}}
  %table{:cellspacing => "0"}
    %thead
      %tr
        %tr
          %td{colspan: '5'}
            Cu documentul nr.&nbsp;
            %span.st= @object.name
            &nbsp;din data de:&nbsp;
            %span.st= @object.id_date.to_s
        %tr
          %td{colspan: '5'}
            Explicaţii:&nbsp;
            %span.st{style: 'width:340px'}= @object.text
            %br
            s-au Casat/Degradat următoarele materiale:
        %tr
          %td{colspan: '5'}
            %span &nbsp;
    %tbody.inner
      %tr
        - t('trst_acc_cassation.get.label.tbody').each do |label|
          %td.ce= label
      - @object.freights.each do |f|
        %tr
          %td
            %span= f.freight.name
          %td
            %span.ce kg
          %td
            %span.qu= "%.2f" % f.pu
          %td
            %span.qu= "%.2f" % f.qu
          %td
            %span.val= "%.2f" % f.val
      %tr
        %td.ce.em.st{:colspan => "3"}= t('trst_acc_cassation.get.label.tbody_sum')
        %td
          %span.qu= "%.2f" % @object.freights.sum(:qu)
        %td
          %span.val= "%.2f" % @object.freights.sum(:val)
    %tfoot
      %tr
        %td{:class => "buttons_bottom", :colspan => "5"}
          %span{:class => "button delete mc-evt"}= t("button.delete")
          %span{:class => "button cancel mc-evt"}= t("button.cancel")
      %tr
        %td.footer_note{:colspan => "2"}= "&nbsp;" #t('gen_footer.note')
- else
  %span#hidden_data.hidden{:data => {:task_id => "#{@task.id}", :js => "acc.cassation", :action => "delete", :object_id => "#{@object.id}"}}
  %table
    %thead
      %tr
        %th= t("gen_warning.#{action}")
    %tbody
      %tr
        %td
          %p= t("gen_msg.#{action}", :data => "#{@object.class.to_s} -> #{@object.name}")
    %tfoot
      %tr
        %td{:class => "buttons_bottom"}
          %span{:class => "button cancel mc-evt"}= t("button.cancel")
          %span{:class => "button delete mc-evt"}= t("button.delete")
