%p.close{:onclick => "trst.task.destroy()"}
%p.task_title= t('trst_acc_delivery_note.title')
-if action == 'get'
  %span#hidden_data.hidden{:data => {:task_id => "#{@task.id}", :js => "acc.delivery_note", :action => "get", :object_id => "#{@object.id rescue nil}"}}
  %table{:cellspacing => "0"}
    %thead
      %tr
        %td{:colspan => "3"}
          %span= t('trst_acc_delivery_note.get.label.thead_01', @object.i18n_label_thead_01)
      %tr
        %td{:colspan => "3"} &nbsp;
      %tr
        %td{:colspan => "3"}= t('trst_acc_delivery_note.get.label.thead_02', @object.i18n_label_thead_02)
      %tr
        %td{:colspan => "3"} &nbsp;
    %tbody
      - @object.freights.each_with_index do |f,i|
        %tr
          %td.st= "#{i + 1}. #{t('trst_acc_delivery_note.get.label.tbody')[0]} #{f.freight.name.downcase}"
          %td.st.ri= "#{"%.2f" % f.pu} #{t('trst_acc_delivery_note.get.label.tbody')[1]}"
          %td.st.ri= "#{"%.2f" % f.qu} #{f.um.downcase}"
      %tr
        %td{:colspan => "3"} &nbsp;
    %tfoot
      %tr
        %td{:class => "buttons_bottom", :colspan => "3"}
          %form{:id  => "xhr_#{action}"}
          %span{:class => "button print mc-evt"}= t("button.print")
          %span{:class => "button delete mc-evt"}= t("button.delete")
      %tr
        %td.footer_note{:colspan => "3"}= t('trst_acc_delivery_note.get.footer')
- else
  %span#hidden_data.hidden{:data => {:task_id => "#{@task.id}", :js => "acc.delivery_note", :action => "delete", :object_id => "#{@object.id rescue nil}"}}
  %table
    %thead
      %tr
        %th= t("gen_warning.#{action}")
    %tbody
      %tr
        %td
          %p= t("gen_msg.#{action}", :data => "#{@object.class.to_s} -> #{@object.name}")
    %tfoot
      %tr
        %td{:class => "buttons_bottom"}
          %span{:class => "button cancel mc-evt"}= t("button.cancel")
          %span{:class => "button delete mc-evt"}= t("button.delete")
