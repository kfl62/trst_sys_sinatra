              %input.freight{:id => "freightSelect_0#{i.to_s}"}
            %td
              %span.ce.st kg
            %td
              %span.val 0.00
            %td
              %input.ri.st{:id => "qu_0#{i.to_s}",:name => "[freights][#{i}][qu]",:value => "0.00", :style => "width:8em"}
