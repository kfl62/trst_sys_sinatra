              %input{:type => "hidden", :name => "[freights][#{i}][id_stats]",:value => ''}
              %input{:type => "hidden", :name => "[freights][#{i}][pu]",:value => 0.00}
            %td
              %span.res 0.00
            %td
              %span.db-freight-del
        %tr
          %td.ce.em.st{:colspan => "3"}= t('trst_acc_delivery_note.put.label.tbody_sum')
          %td
            %span.ce.st{:style => "display:block"} 0.00
          %td{:colspan => "2"}
