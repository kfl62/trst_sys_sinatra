            %input.date_retro{:type => "checkbox", :data => {:date_retro => "2011-06-"}}
            %br
            %span.small= "Introduceţi APP pentru luna 07"
            %input.date_retro{:type => "checkbox", :data => {:date_retro => "2011-07-"}}
            %span.small= " | 08"
            %input.date_retro{:type => "checkbox", :data => {:date_retro => "2011-08-"}}
            %span.small= " | 09"
            %input.date_retro{:type => "checkbox", :data => {:date_retro => "2011-09-"}}
            %span.small= " | 10"
            %input.date_retro{:type => "checkbox", :data => {:date_retro => "2011-10-"}}
            %span.small= " | 11"
            %input.date_retro{:type => "checkbox", :data => {:date_retro => "2011-11-"}}
        %tr
          %td
            %span.small= t('trst_acc_expenditure.retro')
- else
  = partial('trst_sys/shared/select_unit')
