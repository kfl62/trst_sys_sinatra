:ruby
  unit_id = current_user.unit_id.nil? ? session[:unit_id] : current_user.unit_id
  client_task_id   = TrstTask.task_id_by_goal("TrstPartnersPf")
%p.close{:onclick => "trst.task.destroy()"}
%p.task_title= t('trst_acc_expenditure.title')
%span#hidden_data.hidden{:data => {:task_id => @task.id, :js => "acc.expenditure", :action => "filter", :client_task_id => client_task_id}}
- if unit_id
  - if current_user.unit_id.nil?
    = partial('trst_sys/shared/select_unit')
  %table{:cellspacing => "0"}
    %thead
      %tr
        %td
          %p{:style => "font-size:0.9em"}= t('trst_acc_expenditure.client.select')
    %tbody
      %tr
        %td.filtering-select-client
          %input#clientSelect
          %span{:class => "button post mc-evt"}= t('trst_acc_expenditure.client.add_button')
    %tfoot
      %tr
        %td{:class => "buttons_bottom"}
          %span{:class => "button post mc-evt"}= t("button.post") + " APP!"
          %span{:class => "button cancel mc-evt"}= t("button.cancel")
- else
  = partial('trst_sys/shared/select_unit')
