%p.close{:onclick => "trst.task.destroy()"}
%p.task_title= current_title(@task,action)
-if action == 'put'
  %form{:id  => "xhr_#{action}"}
    %table{:cellspacing => "0"}
      %thead
        %tr
          %th= t('gen_head.field')
          %th= t('gen_head.value')
      %tbody
        - @object.table_data.each do |data|
          - tr_body('put',data,@task,@object)
      %tfoot
        %tr
          %td{:class => "buttons_bottom", :colspan => "2"}
            %span{:class => "button put", :onclick => "trst.task.init('#{@task.id}','put','#{@object.id}')"}=t("button.save")
            %span{:class => "button cancel", :onclick => "trst.task.destroy()"}= t("button.cancel")
            - if current_user.admin?
              %span{:class => "button delete", :onclick => "trst.task.init('#{@task.id}', 'delete', '#{@object.id}')"}= t("button.delete")
        %tr
          %td.footer_note{:colspan => "2"}= t('trst_acc_freight.footer_note')
-else
  %table{:cellspacing => "0"}
    %thead
      %tr
        %th= t("gen_warning.#{action}")
    %tbody
      %tr
        %td
          %p.ju{:style => "width:350px"}= t("gen_msg.#{action}", :data => "#{@object.name}")
    %tfoot
      %tr
        %td{:class => "buttons_bottom"}
          - current_buttons(action).each do |button|
            %span{:class => "button #{button}", :onclick => current_xhr(button,@task.id,action,"new",params)}<
              =t("button.#{button}")

