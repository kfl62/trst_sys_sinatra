%p.close{:onclick => "trst.task.destroy()"}
%p.task_title= current_title(@task,action)
-if action == 'get'
  %table{:cellspacing => "0"}
    %thead
      %tr
        %td{:colspan => "4"}
        %span.small= "Cu documentul având nr. intern #{@object.name} s-au operat avizele:"
        %span.small{:style => "display:block; max-width:400px"}= "#{@object.delivery_notes.map{|dn| dn.id_main_doc}.join(', ')}"
        %span.small= "şi s-au recepţionat următoarele mărfuri:"
    %tbody.inner
      %tr.ce
        %td Material
        %td Preţ (lei/kg)
        %td Cantitate
        %td Valoare
      - data = @object.delivery_notes.sum_freights_grn; data.sort.each do |s|
        %tr.to-calculate
          %td
            %span.freight= s[1][0]
          %td
            %span.pu= "%.2f" % s[1][2]
          %td
            %span.val= "%.2f" % s[1][3]
          %td
            %span.val= "%.2f" % s[1][4]
      %tr.result
        %td.ce.st{:colspan => "3"}= "Total"
        %td
          %span.val= "%.2f" % data.values.sum{|r| r[4]}
    %tfoot
      %tr
        %td{:class => "buttons_bottom", :colspan => "4"}
          %form{:id  => "xhr_#{action}"}
          %span{:class => "button print", :onclick => "trst.task.acc.print('#{@task.id}','print','#{@object.id}')"}= t("button.print")
          %span{:class => "button delete", :onclick => "trst.task.init('#{@task.id}','delete','#{@object.id}')"}= t("button.delete")
      %tr
        %td.footer_note{:colspan => "4"}= #t('trst_acc_grn_transfer.footer_note_print')
- else
  %table
    %thead
      %tr
        %th= t("gen_warning.#{action}")
    %tbody
      %tr
        %td
          %p= t("gen_msg.#{action}", :data => "#{@object.class.to_s} -> #{@object.name}")
    %tfoot
      %tr
        %td{:class => "buttons_bottom"}
          - current_buttons(action).each do |button|
            %span{:class => "button #{button}", :onclick => current_xhr(button,@task.id,action,@object.id,params)}<
              =t("button.#{button}")
