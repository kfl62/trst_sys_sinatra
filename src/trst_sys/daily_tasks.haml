%ul
  %li.em.st=  t('xhr_tasks.title')
  - if tsks[0].empty?
    %li= t('xhr_tasks.empty')
  - else
    - tsks[0].each do |tsk|; data_tsk = TrstTask.find(tsk).target.split('_').last == 'test' ? 'test' : 'filter'
      %li
        %a{:id  => "#{tsk}",:'data-tsks' => data_tsk,:href => "#"}
          = TrstTask.find(tsk).name
        %span.help{:onclick  => "trst.task.init('#{tsk}','help')"}
  - unless tsks[1].empty?
    %li.em.st= t('xhr_pdfs.title')
    - tsks[1].each do |pdf|; data_tsk = TrstTask.find(tsk).target.split('_').last == 'test' ? 'test' : 'pdf'
      %li
        %a{:id => "#{pdf}",:'data-tsks' => data_tsk,:href => "#"}
          = TrstTask.find(pdf).name
        %span.help{:onclick  => "trst.task.init('#{pdf}','help')"}
  - unless tsks[2].empty?
    %li.em.st= t('xhr_queries.title')
    - tsks[2].each do |query|; data_tsk = TrstTask.find(tsk).target.split('_').last == 'test' ? 'test' : 'query'
      %li
        %a{:id => "#{query}",:'data-tsks' => data_tsk,:href => "#"}
          = TrstTask.find(query).name
        %span.help{:onclick  => "trst.task.init('#{query}','help')"}
  - unless tsks[3].empty?
    %li.em.st= t('xhr_repair.title')
    - tsks[3].each do |query|; data_tsk = TrstTask.find(tsk).target.split('_').last == 'test' ? 'test' : 'repair'
      %li
        %a{:id => "#{repair}",:'data-tsks' => data_tsk,:href => "#"}
          = TrstTask.find(query).name
        %span.help{:onclick  => "trst.task.init('#{repair}','help')"}


