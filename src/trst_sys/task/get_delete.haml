%p.close{:onclick => "task.destroy()"}
%p.task_title= @task.title.empty? ? "...?..." : @task.title
-if action == 'get'
  %table{:cellspacing => "0"}
    %tbody
      %tr
        %th= t('gen_head.field')
        %th= t('gen_head.value')
      - readable_values(@object).each do |f|
        %tr{:class => tr_class(f[0])}
          %td= f[1]
          %td= f[2].class == Array ? f[2].join(', ') : f[2]
      %tr
        %td{:class => "buttons_bottom", :colspan => "2"}
          %span.button.put=t('button.put')
          %span.button.post=t('button.post')
          %span.button.delete=t('button.delete')

