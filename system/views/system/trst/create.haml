%span#hidden_data.hidden{data: {dialog: "create", title: t("create.title", data: mat(@object,'model_name')), model: mat(@object,'model_name'), oid: "null", related_id: params[:related_id] || 'null'}}
%form{action: "/sys/#{@path}", method: "post"}
  %table{:cellspacing => "0"}
    %thead
      %tr
        %th{colspan: "3"}
          %span.warning= t('create.header', data: mat(@object,'model_name'))
    = partial "#{@path}/form"
    %tfoot
      %tr
        %td.buttonset.ce{colspan: "3"}
          %button{type: "button", data: {action: "save",  icon: "disk",remove: 'false'}}=         t('button.save')
          %button{type: "button", data: {action: "cancel",icon: "circle-close"}}= t('button.cancel')
