%span#hidden_data.hidden{data: {dialog: "delete",model_name: mat(@object,'model_name'),oid: @object.id}}
%form{action: "/sys/#{@path}", method: "delete"}
  %table{cellspacing: "0"}
    %thead
      %tr
        %th{colspan: "2"}
          %span.warning.width-350.ju= t('intro.delete.main', data: mat(@object,'model_name'))
    = partial "/#{@path}/show"
    %tfoot
      %tr
        %td.buttonset.ce{colspan: "2"}
          %button{type: "button", data: {action: "delete",icon: "circle-minus"}}= t('button.delete')
          %button{type: "button", data: {action: "cancel",icon: "circle-close"}}= t('button.cancel')

